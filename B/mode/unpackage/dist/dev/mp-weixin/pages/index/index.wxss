
	/* 全局重置 */
html, body, #app {
	    width: 100%;
	    height: 100%;
	    margin: 0;
	    padding: 0;
	    overflow-x: hidden;
}
* {
	    margin: 0;
	    padding: 0;
	    box-sizing: border-box;
}
	
	/* 轮播图 */
.index-banner {
	    width: 100%;
	    height: 40vw;
	    margin: 10px 0;
}
.swiper-container, .swiper-img {
	    width: 100%;
	    height: 100%;
}
.swiper-img {
	    object-fit: cover;
	    display: block;
}
	
	/* 搜索框 */
.index-search {
	    margin: 1px auto;
	    width: 98%;
	    height: 40px;
	    padding: 0 5px;
	    display: flex;
	    align-items: center;
	    border: 1px solid #ccc;
	    border-radius: 50rpx;
}
.icon {
	    width: 20px;
	    margin-left: 15px;
}
.inp {
	    font-size: 15px;
	    border: 7px solid transparent;
	    background: transparent;
	    width: calc(100% - 40px);
	    height: 40px;
	    margin-left: 7px;
}
	
	/* 功能图标 */
.function-icons {
	    margin: 10px;
}
.icon-row {
	    display: flex;
	    justify-content: space-around;
	    margin-bottom: 10px;
}
.icon-item {
	    display: flex;
	    flex-direction: column;
	    align-items: center;
}
.icon-item image {
	    width: 40px;
	    height: 40px;
	    margin-bottom: 5px;
}
.icon-item text {
	    font-size: 12px;
	    color: #333;
}
	
	/* 记录区域 */
.record-section {
	    margin: 10px;
	    background: #fff;
	    border-radius: 10px;
	    padding: 10px;
}
.record-text {
	    font-size: 14px;
	    padding: 5rpx 18rpx;
	    color: #666;
	    background: #ccc;
	    border-radius: 50rpx;
	    margin-bottom: 5px;
}
.record-section image {
	    width: 100%;
	    height: auto;
	    margin-top: 5px;
}
